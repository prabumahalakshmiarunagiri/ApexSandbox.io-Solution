public String reverseWordsInASentence(String sentence){
    
    if(sentence == null ){

        return null;

    }

    List<String> ls = sentence?.split(' ');

    string reverseStr ='';

    for(Integer i = ls.size()-1;i>=0;i--){

        if(reverseStr == ''){

        reverseStr += ls[i];

        }

        else{

         reverseStr += ' '+ls[i];

        }

    }

    return reverseStr;
}