public void enrollStudents(List<String> emails, String className) {
    
    List<apxio__Student__c> studentList = [SELECT Id 
                                            FROM apxio__Student__c 
                                            WHERE apxio__Email__c IN : emails];
    List<apxio__Class__c> classList = [SELECT Id 
                                        FROM apxio__Class__c
                                        WHERE Name =: className];

    List<apxio__Class_Enrollment__c> enrollList = new List<apxio__Class_Enrollment__c>();

    for(apxio__Student__c student : studentList) {
        apxio__Class_Enrollment__c enrollment = new apxio__Class_Enrollment__c();
        enrollment.apxio__Student__c = student.Id;
        enrollment.apxio__Offered_Class__c = classList[0].Id;
        enrollList.add(enrollment);
    }

    insert enrollList;
}