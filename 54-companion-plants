public Boolean companionPlants(String plant1, String plant2) {
    
    Map<String, Boolean> companionMap = new Map<String, Boolean> {
        'lettuce' => 'cucumbers',
        'lettuce' => 'onions',
        'onions' => 'carrots',
        'onions' => 'tomatoes'
    };

    return companionMap.get(plant1) == plant2;
}