public List<Integer> evenNumbers(Integer n) {
    
    List<Integer> intList = new List<Integer>();
    
    if(n < 2) return new List<Integer>{2};

    for(Integer i=2; i < n; i++) {
        if(Math.mod(i,2) == 0) {
            intList.add(i);
        }
    }
    intList.sort();
    return intList;
}